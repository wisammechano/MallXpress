<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3.0dip" />
            <stroke android:width="1.0dip" android:color="@color/dark_primary_color" />
            <gradient android:endColor="@color/dark_primary_color" android:angle="-90.0" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="1.0dip" />
            <stroke android:width="1.0dip" android:color="@color/dark_primary_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3.0dip" />
            <stroke android:width="1.0dip" android:color="@color/dark_primary_color" />
            <gradient android:startColor="@color/dark_primary_color" android:endColor="@color/dark_primary_color" android:angle="-90.0" />
        </shape>
    </item>
</selector>